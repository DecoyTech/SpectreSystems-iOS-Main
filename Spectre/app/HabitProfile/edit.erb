<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @habitprofile.TimeData %></h1>
    <a href="<%= url_for :action => :show, :id => @habitprofile.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @habitprofile.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @habitprofile.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="habitprofile[TimeData]" class="fieldLabel">Timedata</label>
            <input type="text" id="habitprofile[TimeData]" name="habitprofile[TimeData]" value="<%= @habitprofile.TimeData %>" <%= placeholder( "Timedata" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="habitprofile[LocationData]" class="fieldLabel">Locationdata</label>
            <input type="text" id="habitprofile[LocationData]" name="habitprofile[LocationData]" value="<%= @habitprofile.LocationData %>" <%= placeholder( "Locationdata" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="habitprofile[ActionData]" class="fieldLabel">Actiondata</label>
            <input type="text" id="habitprofile[ActionData]" name="habitprofile[ActionData]" value="<%= @habitprofile.ActionData %>" <%= placeholder( "Actiondata" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="habitprofile[FinanceData]" class="fieldLabel">Financedata</label>
            <input type="text" id="habitprofile[FinanceData]" name="habitprofile[FinanceData]" value="<%= @habitprofile.FinanceData %>" <%= placeholder( "Financedata" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
