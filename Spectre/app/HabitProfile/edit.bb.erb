<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @habitprofile.object %>
    <h1>Edit <%= @habitprofile.TimeData%></h1>
    <%= link_to "Delete", :action => :delete, :id => @habitprofile.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @habitprofile.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Timedata: </td>
              <td class="itemValue"><input type="text" name="habitprofile[TimeData]" value="<%= @habitprofile.TimeData %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Locationdata: </td>
              <td class="itemValue"><input type="text" name="habitprofile[LocationData]" value="<%= @habitprofile.LocationData %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Actiondata: </td>
              <td class="itemValue"><input type="text" name="habitprofile[ActionData]" value="<%= @habitprofile.ActionData %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Financedata: </td>
              <td class="itemValue"><input type="text" name="habitprofile[FinanceData]" value="<%= @habitprofile.FinanceData %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
