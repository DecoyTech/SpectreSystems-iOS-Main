<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1>New SpectreUpdate</h1>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @spectreupdate.object %>"/>
      <table>
          
            <tr>
                <td class="itemLabel">Title: </td>
                <td class="itemValue"><input type="text" name="spectreupdate[Title]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Image: </td>
                <td class="itemValue"><input type="text" name="spectreupdate[Image]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Date: </td>
                <td class="itemValue"><input type="text" name="spectreupdate[Date]"/></td>
            </tr>
          
            <tr>
                <td class="itemLabel">Content: </td>
                <td class="itemValue"><input type="text" name="spectreupdate[Content]"/></td>
            </tr>
          
      </table>
      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
