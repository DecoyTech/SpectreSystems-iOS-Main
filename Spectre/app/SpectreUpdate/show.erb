<div data-role="page" data-add-back-btn="false">

  <div data-role="header" data-position="inline">
    <h1><%= @spectreupdate.Title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="arrow-l" data-direction="reverse">
      Back
    </a>
    <a href="<%= url_for :action => :edit, :id => @spectreupdate.object %>" class="ui-btn-right" data-icon="star">
      Edit
    </a>
  </div>

  <div data-role="content">
    <ul data-role="listview">
      
          <li>
            <div class="itemLabel">Title</div>
            <div class="itemValue"><%= @spectreupdate.Title %></div>
          </li>
      
          <li>
            <div class="itemLabel">Image</div>
            <div class="itemValue"><img src="<%= @productcatalog.Image %>" /></div>
          </li>
      
          <li>
            <div class="itemLabel">Date</div>
            <div class="itemValue"><%= @spectreupdate.Date %></div>
          </li>
      
          <li>
            <div class="itemLabel">Content</div>
            <div class="itemValue"><%= @spectreupdate.Content %></div>
          </li>
      
    </ul>
  </div>

</div>
