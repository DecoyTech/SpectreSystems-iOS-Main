<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @spectreupdate.object %>
    <h1>Edit <%= @spectreupdate.Title%></h1>
    <%= link_to "Delete", :action => :delete, :id => @spectreupdate.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @spectreupdate.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Title: </td>
              <td class="itemValue"><input type="text" name="spectreupdate[Title]" value="<%= @spectreupdate.Title %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Image: </td>
              <td class="itemValue"><input type="text" name="spectreupdate[Image]" value="<%= @spectreupdate.Image %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Date: </td>
              <td class="itemValue"><input type="text" name="spectreupdate[Date]" value="<%= @spectreupdate.Date %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Content: </td>
              <td class="itemValue"><input type="text" name="spectreupdate[Content]" value="<%= @spectreupdate.Content %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
