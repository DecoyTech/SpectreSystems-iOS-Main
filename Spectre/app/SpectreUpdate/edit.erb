<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @spectreupdate.Title %></h1>
    <a href="<%= url_for :action => :show, :id => @spectreupdate.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @spectreupdate.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @spectreupdate.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="spectreupdate[Title]" class="fieldLabel">Title</label>
            <input type="text" id="spectreupdate[Title]" name="spectreupdate[Title]" value="<%= @spectreupdate.Title %>" <%= placeholder( "Title" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="spectreupdate[Image]" class="fieldLabel">Image</label>
            <input type="text" id="spectreupdate[Image]" name="spectreupdate[Image]" value="<%= @spectreupdate.Image %>" <%= placeholder( "Image" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="spectreupdate[Date]" class="fieldLabel">Date</label>
            <input type="text" id="spectreupdate[Date]" name="spectreupdate[Date]" value="<%= @spectreupdate.Date %>" <%= placeholder( "Date" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="spectreupdate[Content]" class="fieldLabel">Content</label>
            <input type="text" id="spectreupdate[Content]" name="spectreupdate[Content]" value="<%= @spectreupdate.Content %>" <%= placeholder( "Content" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
