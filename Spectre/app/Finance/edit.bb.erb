<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @finance.object %>
    <h1>Edit <%= @finance.SpentTotal%></h1>
    <%= link_to "Delete", :action => :delete, :id => @finance.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @finance.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Spenttotal: </td>
              <td class="itemValue"><input type="text" name="finance[SpentTotal]" value="<%= @finance.SpentTotal %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Spenton: </td>
              <td class="itemValue"><input type="text" name="finance[SpentOn]" value="<%= @finance.SpentOn %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Spentwhere: </td>
              <td class="itemValue"><input type="text" name="finance[SpentWhere]" value="<%= @finance.SpentWhere %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Spentwhen: </td>
              <td class="itemValue"><input type="text" name="finance[SpentWhen]" value="<%= @finance.SpentWhen %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Incometotal: </td>
              <td class="itemValue"><input type="text" name="finance[IncomeTotal]" value="<%= @finance.IncomeTotal %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Incomefrom: </td>
              <td class="itemValue"><input type="text" name="finance[IncomeFrom]" value="<%= @finance.IncomeFrom %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Balancetotal: </td>
              <td class="itemValue"><input type="text" name="finance[BalanceTotal]" value="<%= @finance.BalanceTotal %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
