<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>New <%= @actionuse.title %></h1>
    <a href="<%= url_for :action => :index %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :create %>">
      <input type="hidden" name="id" value="<%= @actionuse.object %>"/>

      
          <div data-role="fieldcontain">
            <label for="actionuse[Title]" class="fieldLabel">Title</label>
            <input type="text" id="actionuse[Title]" name="actionuse[Title]" <%= placeholder("Title") %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="actionuse[Category]" class="fieldLabel">Category</label>
            <input type="text" id="actionuse[Category]" name="actionuse[Category]" <%= placeholder("Category") %> />
          </div>
      

      <input type="submit" value="Create"/>
    </form>
  </div>

</div>
