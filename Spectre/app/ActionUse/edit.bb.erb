<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @actionuse.object %>
    <h1>Edit <%= @actionuse.Title%></h1>
    <%= link_to "Delete", :action => :delete, :id => @actionuse.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @actionuse.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Title: </td>
              <td class="itemValue"><input type="text" name="actionuse[Title]" value="<%= @actionuse.Title %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Category: </td>
              <td class="itemValue"><input type="text" name="actionuse[Category]" value="<%= @actionuse.Category %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
