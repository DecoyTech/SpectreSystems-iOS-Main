<div data-role="page">

  <div data-role="header" data-position="inline">
    <h1>Edit <%= @actionuse.Title %></h1>
    <a href="<%= url_for :action => :show, :id => @actionuse.object %>" class="ui-btn-left" data-icon="back" data-direction="reverse">
      Cancel
    </a>
    <a href="<%= url_for :action => :delete, :id => @actionuse.object %>" class="ui-btn-right" data-icon="delete" data-direction="reverse">
      Delete
    </a>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @actionuse.object %>"/>
      
          <div data-role="fieldcontain">
            <label for="actionuse[Title]" class="fieldLabel">Title</label>
            <input type="text" id="actionuse[Title]" name="actionuse[Title]" value="<%= @actionuse.Title %>" <%= placeholder( "Title" ) %> />
          </div>
      
          <div data-role="fieldcontain">
            <label for="actionuse[Category]" class="fieldLabel">Category</label>
            <input type="text" id="actionuse[Category]" name="actionuse[Category]" value="<%= @actionuse.Category %>" <%= placeholder( "Category" ) %> />
          </div>
      
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
