<div data-role="page" data-add-back-btn="true">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :index %>
    <h1><%= @shoebox.Receipts %></h1>
    <%= link_to "Edit", :action => :edit, :id => @shoebox.object %>
  </div>

  <div data-role="content">
    <table>
      
      <tr>
    	<td class="itemLabel">Receipts</td>
        <td class="itemValue"><%= @shoebox.Receipts%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Bills</td>
        <td class="itemValue"><%= @shoebox.Bills%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">CheckBook</td>
        <td class="itemValue"><%= @shoebox.CheckBook%></td>
      </tr>
      
      <tr>
    	<td class="itemLabel">Documents</td>
        <td class="itemValue"><%= @shoebox.Documents%></td>
      </tr>
      
    </table>
  </div>

</div>
