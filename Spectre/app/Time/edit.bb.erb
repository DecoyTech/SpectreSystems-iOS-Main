<div data-role="page">

  <div data-role="header" data-position="inline">
    <%= link_to "Back", :action => :show, :id => @time.object %>
    <h1>Edit <%= @time.SpentHere%></h1>
    <%= link_to "Delete", :action => :delete, :id => @time.object %>
  </div>

  <div data-role="content">
    <form method="POST" action="<%= url_for :action => :update %>">
      <input type="hidden" name="id" value="<%= @time.object %>"/>
      <table>
          
          <tr>
              <td class="itemLabel">Spenthere: </td>
              <td class="itemValue"><input type="text" name="time[SpentHere]" value="<%= @time.SpentHere %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Spentmoving: </td>
              <td class="itemValue"><input type="text" name="time[SpentMoving]" value="<%= @time.SpentMoving %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Currenttime: </td>
              <td class="itemValue"><input type="text" name="time[CurrentTime]" value="<%= @time.CurrentTime %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Currentday: </td>
              <td class="itemValue"><input type="text" name="time[CurrentDay]" value="<%= @time.CurrentDay %>"/></td>
          </tr>
          
          <tr>
              <td class="itemLabel">Currentdate: </td>
              <td class="itemValue"><input type="text" name="time[CurrentDate]" value="<%= @time.CurrentDate %>"/></td>
          </tr>
          
      </table>
      <input type="submit" value="Update"/>
    </form>
  </div>

</div>
